<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory name="message">
		<property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="hibernate.connection.password">root</property>
		<property name="hibernate.connection.url">jdbc:mysql://localhost/hello</property>
		<property name="hibernate.connection.username">root</property>
		<property name="hibernate.dialect">org.hibernate.dialect.MySQL5Dialect</property>
		<property name="hibernate.hbm2ddl.auto">update</property>
		<property name="hibernate.id.new_generator_mappings">false</property>



		<mapping class="com.homovulgaris.learn.jpahibernate.entity.Message" />
		<mapping class="com.homovulgaris.learn.jpahibernate.entity.Person" />
		<mapping class="com.homovulgaris.learn.jpahibernate.entity.Student" />
		<mapping class="com.homovulgaris.learn.jpahibernate.entity.Guide" />
		<mapping class="com.homovulgaris.learn.jpahibernate.entity.Passport" />
		<mapping class="com.homovulgaris.learn.jpahibernate.entity.Customer" />
		<mapping class="com.homovulgaris.learn.jpahibernate.entity.Actor" />
		<mapping class="com.homovulgaris.learn.jpahibernate.entity.Movie" />
		<mapping class="com.homovulgaris.learn.jpahibernate.entity.Employee" />
		<mapping class="com.homovulgaris.learn.jpahibernate.entity.Friend" />
		<mapping class="com.homovulgaris.learn.jpahibernate.entity.Parent" />

	</session-factory>

</hibernate-configuration>
